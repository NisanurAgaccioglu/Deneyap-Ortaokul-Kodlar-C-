#include <iostream>
#include <string>
using namespace std;

class Ceptelefonu
{
public:
    string marka;
    string model;
    int fiyat;
    bool arama_durum();
    bool mesaj_durum();

    Ceptelefonu(int fiyat, bool arama_durum,bool mesaj_durum)
    {
        this->fiyat = fiyat;
        this->arama_durum = arama_durum;
        this->mesaj_durum = mesaj_durum;

        cout<<"Fiyat: "<<this->fiyat<<", "<<
        "Arama durum: "<<this->arama_durum<<
        ", "<<"Mesaj durum: "<<this->mesaj_durum<<endl;
    }
};


int main()
{
    Ceptelefonu telefon1(100,true,false);



    return 0;
}
